# BoomCard Partner Dashboard - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
VITE_APP_NAME=BoomCard
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-jwt-secret-change-this
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here
VITE_JWT_EXPIRES_IN=15m
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/boomcard
REDIS_URL=redis://localhost:6379

# ===========================================
# Payment Gateways
# ===========================================

# Stripe
VITE_STRIPE_PUBLIC_KEY=pk_test_...
VITE_STRIPE_SECRET_KEY=sk_test_...
VITE_STRIPE_WEBHOOK_SECRET=whsec_...

# ePay.bg (Bulgarian Payment Gateway)
VITE_EPAY_CLIENT_ID=your_epay_client_id
VITE_EPAY_SECRET=your_epay_secret
VITE_EPAY_ENVIRONMENT=sandbox

# myPOS
VITE_MYPOS_STORE_ID=your_mypos_store_id
VITE_MYPOS_PRIVATE_KEY=your_mypos_private_key

# SumUp
VITE_SUMUP_APP_ID=your_sumup_app_id
VITE_SUMUP_APP_SECRET=your_sumup_app_secret

# ===========================================
# POS Integrations
# ===========================================

# Barsy POS
VITE_BARSY_API_URL=https://sandbox-api.barsy.bg/v1
VITE_BARSY_API_KEY=your_barsy_api_key

# Poster POS
VITE_POSTER_API_URL=https://joinposter.com/api
VITE_POSTER_API_KEY=your_poster_api_key

# iiko
VITE_IIKO_API_URL=https://api-eu.iiko.services
VITE_IIKO_API_LOGIN=your_iiko_login

# R-Keeper
VITE_RKEEPER_API_URL=http://localhost:8080
VITE_RKEEPER_USERNAME=your_rkeeper_username

# ===========================================
# Email Service
# ===========================================
VITE_EMAIL_PROVIDER=sendgrid
VITE_SENDGRID_API_KEY=SG....
VITE_EMAIL_FROM=dev@boomcard.bg
VITE_EMAIL_FROM_NAME=BoomCard Dev

# ===========================================
# Error Tracking & Monitoring
# ===========================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0

# ===========================================
# Analytics
# ===========================================
VITE_GA_TRACKING_ID=
VITE_GTM_ID=

# ===========================================
# Maps & Location
# ===========================================
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_ACCESS_TOKEN=

# ===========================================
# Feature Flags
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DEBUG_MODE=true

# ===========================================
# Cache Configuration
# ===========================================
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600