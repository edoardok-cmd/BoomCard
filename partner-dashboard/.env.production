# BoomCard Partner Dashboard - Production Environment
# IMPORTANT: Never commit actual secrets to version control

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
VITE_APP_NAME=BoomCard
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_BASE_URL=https://api.boomcard.bg
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_URL=wss://ws.boomcard.bg
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=${JWT_SECRET}
NEXTAUTH_URL=https://partners.boomcard.bg
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
VITE_JWT_EXPIRES_IN=15m
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# Database
# ===========================================
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# ===========================================
# Payment Gateways
# ===========================================

# Stripe
VITE_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
VITE_STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
VITE_STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# ePay.bg (Bulgarian Payment Gateway)
VITE_EPAY_CLIENT_ID=${EPAY_CLIENT_ID}
VITE_EPAY_SECRET=${EPAY_SECRET}
VITE_EPAY_ENVIRONMENT=production

# myPOS
VITE_MYPOS_STORE_ID=${MYPOS_STORE_ID}
VITE_MYPOS_PRIVATE_KEY=${MYPOS_PRIVATE_KEY}

# SumUp
VITE_SUMUP_APP_ID=${SUMUP_APP_ID}
VITE_SUMUP_APP_SECRET=${SUMUP_APP_SECRET}

# ===========================================
# POS Integrations
# ===========================================

# Barsy POS
VITE_BARSY_API_URL=https://api.barsy.bg/v1
VITE_BARSY_API_KEY=${BARSY_API_KEY}

# Poster POS
VITE_POSTER_API_URL=https://joinposter.com/api
VITE_POSTER_API_KEY=${POSTER_API_KEY}

# iiko
VITE_IIKO_API_URL=https://api-eu.iiko.services
VITE_IIKO_API_LOGIN=${IIKO_API_LOGIN}

# R-Keeper
VITE_RKEEPER_API_URL=${RKEEPER_API_URL}
VITE_RKEEPER_USERNAME=${RKEEPER_USERNAME}

# ===========================================
# Email Service
# ===========================================
VITE_EMAIL_PROVIDER=sendgrid
VITE_SENDGRID_API_KEY=${SENDGRID_API_KEY}
VITE_EMAIL_FROM=noreply@boomcard.bg
VITE_EMAIL_FROM_NAME=BoomCard

# ===========================================
# Error Tracking & Monitoring
# ===========================================
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# Analytics
# ===========================================
VITE_GA_TRACKING_ID=${GA_TRACKING_ID}
VITE_GTM_ID=${GTM_ID}

# ===========================================
# Maps & Location
# ===========================================
VITE_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
VITE_MAPBOX_ACCESS_TOKEN=${MAPBOX_ACCESS_TOKEN}

# ===========================================
# CDN Configuration
# ===========================================
VITE_CDN_URL=https://cdn.boomcard.bg
VITE_ASSETS_URL=https://assets.boomcard.bg

# ===========================================
# Feature Flags
# ===========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_MODE=false

# ===========================================
# Security
# ===========================================
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_CORS=true
VITE_ALLOWED_ORIGINS=https://boomcard.bg,https://www.boomcard.bg,https://partners.boomcard.bg

# ===========================================
# Cache Configuration
# ===========================================
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600

# ===========================================
# Logging
# ===========================================
VITE_LOG_LEVEL=info
VITE_LOG_FORMAT=json

# ===========================================
# Deployment
# ===========================================
VITE_BUILD_NUMBER=${BUILD_NUMBER}
VITE_COMMIT_SHA=${COMMIT_SHA}
VITE_DEPLOYED_AT=${DEPLOYED_AT}