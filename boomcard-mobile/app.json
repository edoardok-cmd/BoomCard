{
  "expo": {
    "name": "BoomCard",
    "slug": "boomcard-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "bg.boomcard.mobile",
      "associatedDomains": [
        "applinks:app.boomcard.bg",
        "webcredentials:app.boomcard.bg"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "BoomCard needs camera access to scan receipts and QR codes",
        "NSPhotoLibraryUsageDescription": "BoomCard needs photo library access to upload receipt images",
        "NSLocationWhenInUseUsageDescription": "BoomCard needs your location to verify you are within 60 meters of the venue when submitting receipts",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "BoomCard needs your location to verify you are within 60 meters of the venue",
        "NSMicrophoneUsageDescription": "This app does not require microphone access",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "bg.boomcard.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "app.boomcard.bg",
              "pathPrefix": "/payment-result"
            },
            {
              "scheme": "boomcard",
              "host": "payment-result"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "boomcard",
    "plugins": [
      "expo-barcode-scanner",
      "expo-secure-store",
      "expo-camera",
      "expo-location",
      [
        "expo-image-picker",
        {
          "photosPermission": "BoomCard needs access to your photos to upload receipt images",
          "cameraPermission": "BoomCard needs camera access to scan receipts"
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "a7947dfa-d58c-49c8-9975-9607a551f60b"
      }
    },
    "owner": "edoardok"
  }
}
