# BoomCard Mobile App - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
# Development: http://localhost:3001
# Production: https://api.boomcard.bg
API_URL=https://api.boomcard.bg

# =============================================================================
# App Configuration
# =============================================================================

# App URL scheme for deep linking
APP_SCHEME=boomcard

# App version (should match app.json)
APP_VERSION=1.0.0

# Build number (increment for each build)
BUILD_NUMBER=1

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features for testing
FEATURE_BIOMETRIC_AUTH=false
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_ANALYTICS=false

# =============================================================================
# Sentry (Error Tracking) - Optional
# =============================================================================

# Sentry DSN for crash reporting
# Get from: https://sentry.io
SENTRY_DSN=

# Sentry organization slug
SENTRY_ORG=

# Sentry project name
SENTRY_PROJECT=boomcard-mobile

# Enable Sentry in production
SENTRY_ENABLED=false

# =============================================================================
# Analytics - Optional
# =============================================================================

# Google Analytics Measurement ID
GA_MEASUREMENT_ID=

# Mixpanel Token
MIXPANEL_TOKEN=

# =============================================================================
# Maps Configuration
# =============================================================================

# Google Maps API Key (for venue maps)
# Get from: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=

# =============================================================================
# Build Configuration
# =============================================================================

# Build type: development | preview | production
BUILD_TYPE=production

# Enable source maps for debugging
ENABLE_SOURCE_MAPS=true

# Enable React DevTools
ENABLE_DEV_TOOLS=false

# =============================================================================
# Testing Configuration
# =============================================================================

# Test user credentials (for App Store review)
TEST_USER_EMAIL=appstore-review@boomcard.bg
TEST_USER_PASSWORD=ReviewTest2025!

# =============================================================================
# Notes
# =============================================================================

# - Never commit .env file to git (it's in .gitignore)
# - Use .env.example as template
# - Copy to .env and fill in actual values
# - Different values for development and production
